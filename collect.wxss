.container{
	background-color: #fff;
}
.container .banner{
	display: inline-block;
}
.container image {
	width: 100vw;
}
.container .item input, .container .item picker{
	background-color: #eeeeee;
}
.container .content{
	display: block;
	margin: 20rpx 30rpx;
	/* border: #222 solid 3px; */
	border-radius: 15px;
	padding: 40rpx 20rpx;
	/* background-color: rgb(253, 173, 10); */
	background-color: #fff;
	font-size: 34rpx;
}
.container .item{
	display: flex;
	flex-wrap: nowrap;
	align-items: center;
	justify-content: space-around;
	width: 100%;
	margin: 0 auto 30rpx;
}
.container picker{
	width: 495rpx;
	display:inline-block;
	line-height:56rpx;
	height:65rpx;
	border-radius:5px;
	background-color:#fff;
	vertical-align:middle;
	padding:0 20rpx;
}
.container picker view{
	line-height: 60rpx;
}
.container input{
	width: 495rpx;
	display: inline-block;
	line-height: 56rpx;
	height: 65rpx;
	border-radius: 5px;
	background-color: #fff;
	vertical-align: middle;
	padding: 0 20rpx;
}
.container checkbox-group{
	width: 520rpx;
	height:65rpx;
	display:inline-block;
	vertical-align:middle;
	padding:0 20rpx;
}
.container view.checkbox{
	display: inline-block;
	min-width: 50%;
}
.container view.checkbox checkbox{
	vertical-align: middle;
}
.container view.checkbox label{
	line-height: 65rpx;
	vertical-align: middle;
}
.container .button{
	width: 693rpx;
	height: 95rpx;
	line-height: 75rpx;
	background-image:url('https://wx-open-img.xizi.com/201803/02/Fv-wEgIfMxsxAEdFZN2n0wFksqeC.png');
	color: #222;
	background-size:100% 100%;
	background-repeat:no-repeat;
	font-size:34rpx;
	font-weight:900;
	background-color:transparent;
	white-space:nowrap;
	margin-top:25rpx;
}
.container input.hidden{
	display: none;
}